{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "commonjs",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "lib": ["esnext", "dom"],
        "typeRoots": ["./src/types", "node_modules/@types"],
        "rootDir": "./",
        "inlineSources": true,
        "sourceRoot": "/",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@config": ["src/config/index.ts"],
            "@config/*": ["src/config/*"],
            "@controllers/*": ["src/server/controllers/*"],
            "@components/*": ["src/server/views/pages/components/*"],
            "@infra/*": ["src/server/infra/*"],
            "@lib/*": ["src/lib/*"],
            "@models/*": ["src/server//models/*"],
            "@modules/*": ["src/server/modules/*"],
            "@schedulers/*": ["src/server/schedulers/*"],
            "@services/*": ["src/server/services/*"],
            "@views": ["src/server/views/index.ts"],
            "@views/*": ["src/server/views/*"],
            "@db": ["src/server/db/index.ts"],
            "@db/*": ["src/server/db/*"],
            "@betagouv": ["src/server/betagouv.ts"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.tsx",
        "static",
        "migrations",
        "src/app",
        "src/components",
        "src/providers",
        "__tests__",
        "models",
        "src/lib",
        "knexfile.js",
        "**/**.spec.ts",
        "dist",
        "storybook"
    ]
}
