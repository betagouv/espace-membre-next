{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2018",
        "module": "commonjs",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "incremental": true,
        "composite": true,
        "lib": ["esnext", "dom"],
        "typeRoots": ["./src/types", "node_modules/@types"],
        "strictNullChecks": true,
        "rootDir": "./",
        "inlineSources": true,
        "sourceRoot": "/",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@config": ["src/config/index.ts"],
            "@config/*": ["src/config/*"],
            "@controllers/*": ["src/server/controllers/*"],
            "@components/*": ["src/server/views/pages/components/*"],
            "@infra/*": ["src/server/infra/*"],
            "@lib/*": ["src/lib/*"],
            "@models/*": ["src/server//models/*"],
            "@modules/*": ["src/server/modules/*"],
            "@node_modules/*": ["node_modules/*"],
            "@schedulers/*": ["src/server/schedulers/*"],
            "@services/*": ["src/server/services/*"],
            "@views": ["src/server/views/index.ts"],
            "@views/*": ["src/server/views/*"],
            "@db": ["src/server/db/index.ts"],
            "@db/*": ["src/server/db/*"],
            "@betagouv": ["src/server/betagouv.ts"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    },
    "exclude": [
        "node_modules",
        ".next",
        "out",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/__tests__/**"
    ]
}
