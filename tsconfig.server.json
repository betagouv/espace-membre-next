{
    "compilerOptions": {
        "outDir": "./dist",
        "noErrorTruncation": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "isolatedModules": true,
        "typeRoots": ["./src/types", "node_modules/@types"],
        "incremental": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react-jsx",
        "rootDir": "./",
        "inlineSources": true,
        "sourceRoot": "/",
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "paths": {
            "@sbook/*": [".storybook/*"],
            "@/*": ["./src/*"],
            "@config": ["src/server/config/index.ts"],
            "@config/*": ["src/server/config/*"],
            "@controllers/*": ["./src/server/controllers/*"],
            "@components/*": ["./src/server/views/pages/components/*"],
            "@infra/*": ["./src/server/infra/*"],
            "@lib/*": ["src/lib/*"],
            "@utils/*": ["src/utils/*"],
            "@models/*": ["./src/server/models/*"],
            "@modules/*": ["./src/server/modules/*"],
            "@schedulers/*": ["./src/server/schedulers/*"],
            "@services/*": ["./src/server/services/*"],
            "@views": ["./src/server/views/index.ts"],
            "@views/*": ["./src/server/views/*"],
            "@db": ["./src/server/db/index.ts"],
            "@db/*": ["./src/server/db/*"],
            "@betagouv": ["./src/server/betagouv.ts"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "types.d.ts",
        ".next/types/**/*.ts",
        ".storybook/**/*.ts",
        ".storybook/**/*.tsx",
        "**/*.scss",
        "**/*.email.scss"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        ".next",
        "__tests__",
        "**/*.spec.ts"
    ]
}
