{
    "name": "espace-membre",
    "formation": {
        "web": {
            "quantity": 1,
            "size": "S"
        }
    },
    "addons": ["postgresql:postgresql-sandbox", "redis:redis-sandbox"],
    "buildpacks": [
        {
            "url": "heroku/nodejs"
        }
    ],
    "env": {
        "NEXTAUTH_URL": {
            "generator": "url"
        },
        "HOSTNAME": {
            "template": "%APP%.%REGION%.scalingo.io"
        }
    },
    "scripts": {
        "postdeploy": "npm run migrate",
        "first-deploy": "bash scalingo-dev-seed.sh"
    }
}
